---
import '../styles/global.css'
import '../styles/collage.css'
import '../styles/overlay.css'
import '../styles/sidebar.css'
import NavigationSidebar from '../components/layout/NavigationSidebar.astro'

interface Props {
  title?: string
}

const { title = 'Unsplash Collage' } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Create beautiful collages from Unsplash images"
    />
    <title>{title}</title>
  </head>

  <body>
    <button id="menu-toggle" class="menu-toggle" aria-label="Toggle menu">
      <i data-lucide="menu"></i>
    </button>

    <div class="sidebar-overlay" id="sidebar-overlay"></div>

    <div class="app-layout">
      <NavigationSidebar />
      <main class="main">
        <slot />
      </main>
    </div>

    <script src="/src/islands/navigation-sidebar.ts" type="module"></script>
    <script src="/src/islands/lucide-icons-init.ts" type="module"></script>
  </body>
</html>
