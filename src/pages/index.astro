---
import BaseLayout from '../layouts/BaseLayout.astro'
import ImageSearchHeader from '../components/layout/ImageSearchHeader.astro'
import UnsplashImageGrid from '../components/gallery/UnsplashImageGrid.astro'
---

<BaseLayout title="Explore Images - Unsplash Collage">
  <div>
    <div>
      <ImageSearchHeader />

      <div class="selection-bar">
        <span id="selection-count">0 / 4 selected</span>
        <button id="create-collage" disabled> Create collage </button>
      </div>

      <UnsplashImageGrid />
    </div>
  </div>

  <script src="/src/islands/unsplash-image-explorer.ts" type="module"></script>
</BaseLayout>
