---
import BaseLayout from '../layouts/BaseLayout.astro'
import DownloadProgressOverlay from '../components/collage/DownloadProgressOverlay.astro'
---

<BaseLayout title="Gallery - Unsplash Collage">
  <DownloadProgressOverlay />
  <div class="layout">
    <div>
      <h1>Your Gallery</h1>

      <div class="layout-selector">
        <button data-layout="grid">
          <i data-lucide="layout-grid"></i> grid
        </button>
      </div>

      <div id="empty-state" hidden></div>
      <div id="gallery-root"></div>
    </div>
  </div>

  <script src="/src/islands/saved-collages-gallery.ts" type="module"></script>
</BaseLayout>
